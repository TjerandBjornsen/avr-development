{
    "image": "tjerandbjornsen/avr-toolchain:latest",

    "runArgs": ["--device=/dev/ttyACM0"],

    "extensions": [
        "ms-vscode.cpptools",
        "cschlosser.doxdocgen"
    ],

    "settings": {
        "C_Cpp.default.defines": [
            "__AVR_ATmega328P__"
        ],
        "C_Cpp.default.includePath": [
            "${workspaceFolder}/**",
            "/usr/lib/avr/include"
        ]
    }
}
